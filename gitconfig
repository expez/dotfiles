[user]
	name = Expez
	email = mrgrandmother@gmail.com

[core]
	editor = egit
	pager = less -r
	whitespace = fix,-indent-with-non-tab,-cr-at-eol,trailing-space

[include]
	path = ~/.githubconfig

[apply]
	whitespace = fix

[diff]
    tool = ediff
    guitool = ediff
	mnemonicprefix = true
	renames = copy

[difftool "ediff"]
    cmd = ~/bin/ediff.sh $LOCAL $REMOTE $MERGED
	prompt = false

[merge]
    tool = ediff

[mergetool "ediff"]
    cmd = ~/bin/ediff.sh $LOCAL $REMOTE $MERGED $BASE
    trustExitCode = true
    keepBackup = false
[alias]
	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --no-merges
	lg5 = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --no-merges --max-count=5
    l1 = log --max-count=1
    l5 = log --max-count=5
	tree = log --graph --pretty=oneline --decorate --color --abbrev-commit
	stats = shortlog -s -n -e --no-merges
[credential]
	helper = cache

[color]
	branch = auto
	diff = auto
	grep = auto
	interactive
	pager = true
	showbranch = auto
	status = auto
	ui = auto

[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red
    new = cyan

[push]
	default = simple

[rebase]
	autosquash = true

[diff "lisp"]
    xfuncname="^(\\((def|test).*)$"
[diff "python"]
    xfuncname="^\\s*(class.*\\(.*\\)|def.*)(\\(|:)"
